
@using u21512338_HW03.Models
@model List<FileModel>

@{
    ViewBag.Title = "Index";
}

<h2>Documents of any file type</h2>
<h4>..."Media/Documents/" folder</h4>

<head>
    <style type="text/css">
        .tb-style {
            color: #FFFFFF;
        }

        .th {
            text-align: center;
            vertical-align: middle;
        }
    </style>
</head>

<div style="height: auto; overflow: auto; background-color: lightgray">
    <div class="well-sm">
        <table class="table table-condensed table-hover">
            <thead style="position: sticky;top: 0">
                <tr bgcolor="#222222" class="tb-style">
                    <th class="col-lg-8">File Name</th>
                    <th class="th, col-lg-2">DOWNLOAD</th>
                    <th class="th, col-lg-2">DELETE</th>
                </tr>
            </thead>
            @*iterate through files in model and display relevant documents*@
            @foreach (FileModel file in Model)
            {
                <tr>
                    <td>@file.FileName</td>
                    <td>
                        <button class="btn btn-success">
                            @Html.ActionLink("Download", "DownloadFile",
                            new { fileName = file.FileName },
                            new { @style = "color:white;" }) @*white text*@
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-danger">
                            @Html.ActionLink("DELETE", "DeleteFile",
                            new { fileName = file.FileName },
                            new { @style = "color:white;" }) @*white text*@
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
